---
import Layout from "@/layouts/Layout.astro";
import NewPlanForm from "@/components/NewPlanForm";

export const prerender = false;
---

<Layout title="Create New Plan - CityFlow">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Create a New Travel Plan</h1>
      <p class="text-muted-foreground">
        Follow the steps below to create your travel plan. You can add fixed
        points like flights or hotel bookings, and we'll help you plan the
        rest.
      </p>
    </div>
    <NewPlanForm client:load />
  </main>
</Layout>
