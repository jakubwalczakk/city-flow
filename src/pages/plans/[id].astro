---
import Layout from "@/layouts/Layout.astro";

const { id } = Astro.params;
---

<Layout title="Szczegóły planu - CityFlow">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold tracking-tight mb-4">Szczegóły planu</h1>
    <p class="text-muted-foreground">Plan ID: {id}</p>
    <p class="text-muted-foreground mt-2">Widok szczegółów planu będzie dostępny wkrótce.</p>
    <a href="/plans" class="inline-block mt-4 text-primary underline">← Wróć do listy planów</a>
  </div>
</Layout>

