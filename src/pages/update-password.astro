---
import Layout from "@/layouts/Layout.astro";
import { UpdatePasswordForm } from "@/components/auth/UpdatePasswordForm";
---

<Layout title="Ustaw nowe hasło - CityFlow">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      {/* Header */}
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight">Ustaw nowe hasło</h1>
        <p class="mt-2 text-sm text-muted-foreground">
          Wprowadź nowe hasło do swojego konta
        </p>
      </div>

      {/* Update Password Form */}
      <UpdatePasswordForm client:load />

      {/* Back to home */}
      <div class="text-center">
        <a
          href="/"
          class="text-sm text-muted-foreground hover:text-primary hover:underline"
        >
          ← Powrót do strony głównej
        </a>
      </div>
    </div>
  </div>
</Layout>

