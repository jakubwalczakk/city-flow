---
import Layout from '@/layouts/Layout.astro';
import { ForgotPasswordForm } from '@/components/auth/ForgotPasswordForm';
---

<Layout title='Zapomniałem hasła - CityFlow'>
  <div class='flex min-h-screen items-center justify-center px-4 py-12'>
    <div class='w-full max-w-md space-y-8'>
      {/* Header */}
      <div class='text-center'>
        <h1 class='text-3xl font-bold tracking-tight'>Zresetuj hasło</h1>
        <p class='mt-2 text-sm text-muted-foreground'>
          Wprowadź adres email, na który wyślemy link do resetowania hasła
        </p>
      </div>

      {/* Forgot Password Form */}
      <ForgotPasswordForm client:load />

      {/* Back to home */}
      <div class='text-center'>
        <a href='/' class='text-sm text-muted-foreground hover:text-primary hover:underline'>
          ← Powrót do strony głównej
        </a>
      </div>
    </div>
  </div>
</Layout>
