---
import Layout from '@/layouts/Layout.astro';
import { AuthForm } from '@/components/auth/AuthForm';
---

<Layout title='Zaloguj się - CityFlow'>
  <div class='flex min-h-screen items-center justify-center px-4 py-12'>
    <div class='w-full max-w-md space-y-8'>
      {/* Header */}
      <div class='text-center'>
        <h1 class='text-3xl font-bold tracking-tight'>Witaj ponownie</h1>
        <p class='mt-2 text-sm text-muted-foreground'>Zaloguj się, aby zarządzać swoimi planami podróży</p>
      </div>

      {/* Auth Form */}
      <AuthForm mode='login' client:load />

      {/* Back to home */}
      <div class='text-center'>
        <a href='/' class='text-sm text-muted-foreground hover:text-primary hover:underline'>
          ← Powrót do strony głównej
        </a>
      </div>
    </div>
  </div>
</Layout>
